from flask import Flask, render_template, request
app = Flask(__name__)

@app.route('/')
def home_page():
    return render_template('/homePage.html')

@app.route('/madlibs')
def madlibs_page():
    return render_template('/madlibsPage.html')

@app.route('/madlibsResults', methods=['POST'])
def madlibsResults_page():
    if request.method == 'POST':
        name = request.form.get('first_input')
        noun = request.form.get('second_input')
        verb = request.form.get('third_input')
        adjective = request.form.get('fourth_input')
        picture = request.form.get('fifth_input')
        color = request.form.get('sixth_input')
        return render_template('/madlibsResultsPage.html', name=name, noun=noun, verb=verb, adjective=adjective, picture=picture, color=color)

if __name__ == '__main__':
  app.run(host='0.0.0.0', port=80)